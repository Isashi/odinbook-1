<nav class="nav-extended facebook-blue">
	<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
		<div class="container nav-content">
			<div class="row" style="margin-bottom: 0px;">
				<div class="col s2 offset-s7">
					<%= f.label :email %>
				</div>
				<div class="col s2">
					<%= f.label :password %>
				</div>
			</div>
			<div class="row" style="margin-bottom: 0px;">
				<div class="col s7">
					<a href="/" class="brand-logo"><h1>odinbook</h1></a>
				</div>
				<div class="col s2">
					<%= f.email_field :email, autofocus: true %>
				</div>
				<div class="col s2">
					<%= f.password_field :password, autocmplete: "off" %>
				</div>
				<div class="col s1">
					<%= f.submit "Log In", class: "blue" %>
				</div>
			</div>
			<div class="row">
				<div class="col s2 offset-s9">
					<%= link_to "Forgot your password?", new_password_path(resource_name) %>
				</div>
			</div>
		</div>
	<% end %>
</nav>